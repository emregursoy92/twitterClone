<% if following?(user) %>
  <%= link_to relationship_path(current_user.relationships.find_by_friend_id(user)), method: :delete, remote: true, class: 'btn btn-success' %>
<% else %>
  <%= link_to relationships_path(followed_id: user.id), method: :post, remote: true, class: 'btn btn-primary' %>
<% end %>
